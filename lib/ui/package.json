{
  "name": "@lib/ui",
  "version": "0.0.1",
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite dev --host",
    "watch": "bunx --bun svelte-package --watch",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./input": {
      "types": "./dist/input/index.d.ts",
      "svelte": "./dist/input/index.js"
    },
    "./card": {
      "types": "./dist/card/index.d.ts",
      "svelte": "./dist/card/index.js"
    },
    "./activity": {
      "types": "./dist/activity/index.d.ts",
      "svelte": "./dist/activity/index.js"
    },
    "./modal": {
      "types": "./dist/modal/index.d.ts",
      "svelte": "./dist/modal/index.js"
    },
    "./button": {
      "types": "./dist/button/index.d.ts",
      "svelte": "./dist/button/index.js"
    },
    "./layout/info": {
      "types": "./dist/layout/info/index.d.ts",
      "svelte": "./dist/layout/info/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "svelte": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@lib/icons": "workspace:*",
    "@lib/theme": "workspace:*",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.27.4",
    "@sveltejs/package": "^2.0.0",
    "publint": "^0.1.9",
    "svelte": "^5.0.0-next.19",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "svelte-ripple-action": "^1.0.4"
  }
}
